<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/posts.css">
    <title>Blog Posts</title>
</head>
<body>
<div class="container mt-4">
    <h1>Blog Posts</h1>
    <a href="/new-post" class="btn btn-primary mb-4">Create a New Post</a>
    <div class="post-list">
        <% posts.forEach((post, index) => { %>
            <div class="post-item">
                <img src="/assets/<%= images[index % images.length] %>" alt="Post Image">
                <div class="post-content">
                    <h3><%= post.title %></h3>
                    <p><%= post.content.substring(0, 100) %>...</p>
                    <a href="/post/<%= post.id %>" class="btn btn-primary">Read more</a>
                    <a href="/edit-post/<%= post.id %>" class="btn btn-secondary">Edit</a>
                    <form action="/delete-post/<%= post.id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</body>
</html>
