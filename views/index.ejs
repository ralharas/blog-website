<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog</title>
</head>
<body>
<div class="welcome-section">
    <img src="/bm.jpg" alt="Blog image" class="welcome-image">
    <div class="welcome-text">
        <h1>Welcome to Blog</h1>
        <p>Discover new stories, and write your own. Join the community of people who love to read and write</p>
        <a href="/explore" class="btn btn-primary">Read More</a>
    </div>
</div>
<div class="container mt-4">
    <h1>Blog Posts</h1>
    <a href="/new-post" class="btn btn-primary mb-4">Create a New Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post.id %>"><%= post.title %></a>
                <p><%= post.description %></p>
            </li>
       <% }) %>
    </ul>
</div>  
</body>
</html>
