<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/posts.css">
    <title>Blog</title>
</head>
<body>
<div class="welcome-section">
    <img src="/assets/bm.jpg" alt="Blog image" class="welcome-image">
    <div class="welcome-text">
        <h1>Welcome to Blog</h1>
        <p>Discover new stories, and write your own. Join the community of people who love to read and write</p>
        <a href="/explore" class="btn btn-primary">Read More</a>
    </div>
</div>
<div id="post-section" class="container mt-4">
    <h1>Blog Posts</h1>
    <a href="/new-post" class="btn btn-primary mb-4">Create a New Post</a>
    <div class="post-list" style="margin-top: 40px;"> 
        <% posts.forEach((post, index) => { %>
            <div class="post-item">
                <img src="/assets/<%= post.image %>" alt="Post Image">
                <div class="post-content">
                    <h3><%= post.title %></h3>
                    <p><%= post.content.substring(0, 100) %>...</p>
                    <a href="/post/<%= post.id %>" class="btn btn-primary">Read more</a>
                    <a href="/edit-post/<%= post.id %>" class="btn btn-secondary">Edit</a>
                    <form action="/delete-post/<%= post.id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</div>  
</body>
</html>
